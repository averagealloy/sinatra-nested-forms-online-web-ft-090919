<h1><div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %> pounds</h4><br>
  <h4>Height: <%= @pirate.height %> inches</h4>
</div><br></h1>


<h2><h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name_1 %></p><br>
    <p>Type: <%= ship.type_1 %></p><br>
    <p>Booty: <%= ship.booty_1 %></p>
  </div><br>
<% end %></h2>


